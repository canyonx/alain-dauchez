{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% include "shared/_header.html.twig" %}
	<section id="last" class="section has-text-light" style="min-height:100vh">
		<div class="container">
			<h1 class="title has-text-light">Derniers travaux</h1>
			<div class="columns is-multiline">

				{% for w in work %}
					<div class="column is-4">
						{% include "shared/_card.html.twig" %}
					</div>
				{% endfor %}

			</div>
		</div>
	</section>

	<section id="a_propos" class="section has-text-light is-flex is-align-items-center" style="min-height:100vh">
		<div class="container has-text-centered">
			<div class="columns is-vcentered">
				<div class="column is-5">
					<figure class="image is-1by1">
						<img class="is-rounded card p-2" src="{{ asset('img/avatar/' ~ auteur.avatar) }}" alt="Photo de {{ auteur.prenom }} {{ auteur.nom }}">
					</figure>
				</div>
				<div class="column is-6 is-offset-1">
					<h1 class="title has-text-light">
						{{ auteur.prenom }}
						{{ auteur.nom }}
					</h1>
					<hr>
					<p class="has-text-centered">
						{{ auteur.aPropos }}
					</p>
					<p class="pt-6 has-text-centered">Contact :
						<br>
						<span class="mt-2 tag is-light is-medium">{{ auteur.email }}</span>
						<br>
						<span class="mt-2 tag is-light is-medium">{{ auteur.telephone }}</span>
					</p>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
