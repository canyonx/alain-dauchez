{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<section class="hero">
		<div class="hero-head">
			{% include "shared/_navbar.html.twig" %}
		</div>
	</section>
	<section class="section has-text-light">
		<div class="container">

			<div
				class="is-flex is-justify-content-center">
				<!-- 360 Photo -->
				<div class="cloudimage-360" data-folder="{{ asset(w.file)}}" data-filename="{{ w.nom | lower}}-{index}.jpg" data-amount="{{ nbimages }}" style="max-width: 42%; "></div>

			</div>

			<div class=" has-text-centered">
				<h1 class="title has-text-light pt-6">{{ w.nom }}</h1>
				<hr>
				<div class="is-max-desktop">
					<p class="py-6 is-size-5">{{ w.description}}</p>
				</div>
			</div>

			<div class="is-max-desktop columns">
				<div class="column is-2">
					<p class="is-size-6">Hauteur :
						{{ w.hauteur}}</p>
					<p class="is-size-6">Largeur :
						{{ w.largeur}}</p>
					{% if w.enVente == true %}
						<p class="is-size-6">Tarif :
							{{ w.prix}}</p>
					{% endif %}
				</div>
			</div>

		</div>
	</section>

{% endblock %}
