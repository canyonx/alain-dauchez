{% extends 'base.html.twig' %}

{% block title %}Modifier
	{{ p.nom }}
{% endblock %}

{% block body %}
	{% include "shared/_navbar.html.twig" %}
	<section class="section has-text-light container" style="min-height:100vh">
		<h1 class="title has-text-light">Modifier
			{{ p.nom }}</h1>

		<div class="box has-background-light">
			{{ form_start(form)}}
			<div class="has-text-danger">
				{{ form_errors(form) }}
			</div>
			<div class="columns">

				<div class="column">
					<div class="field">
						<div class="control">
							{{ form_row(form.nom) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.matiere) }}
						</div>
					</div>

					<div class="columns">
						<div class="column">
							<div class="field">
								<div class="control">
									{{ form_row(form.hauteur) }}
								</div>
							</div>
						</div>
						<div class="column">
							<div class="field">
								<div class="control">
									{{ form_row(form.largeur) }}
								</div>
							</div>
						</div>
						<div class="column">
							<div class="field">
								<div class="control">
									{{ form_row(form.profondeur) }}
								</div>
							</div>
						</div>
					</div>

					<div class="field">
						<div class="control">
							{{ form_row(form.prix) }}
						</div>
					</div>
					<div class="control">
						<label class="checkbox">
							{{ form_row(form.enVente) }}
						</label>
					</div>

				</div>

				<div class="column">
					<div class="field">
						<div class="control">
							{{ form_row(form.dateRealisation) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.description) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.images) }}
							<p>{{ nbimages }}
								images</p>
						</div>
					</div>

					<div class="field is-pulled-right">
						<div class="control">
							<button class="button is-link" type="submit">Valider</button>
						</div>
					</div>
				</div>
			</div>
			{{ form_end(form)}}

		</div>

	</section>
{% endblock %}
