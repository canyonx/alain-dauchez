{% extends 'base.html.twig' %}

{% block title %}Ajouter une sculpture
{% endblock %}

{% block body %}
	{% include "shared/_navbar.html.twig" %}
	<section class="section has-text-light container" style="min-height:100vh">
		<h1 class="title has-text-light">Ajouter une sculpture</h1>

		<div class="box has-background-light">
			{{ form_start(form)}}
			<div class="has-text-danger">
				{{ form_errors(form) }}
			</div>
			<div class="columns">


				<div class="column">
					<div class="field">
						<div class="control">
							{{ form_row(form.nom) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.hauteur) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.largeur) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.prix) }}
						</div>
					</div>
					<div class="control">
						<label class="checkbox">
							{{ form_row(form.enVente) }}
						</label>
					</div>
				</div>


				<div class="column">
					<div class="field">
						<div class="control">
							{{ form_row(form.dateRealisation) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.description) }}
						</div>
					</div>
					<div class="field">
						<div class="control">
							{{ form_row(form.images) }}
						</div>
					</div>

					<div class="field">
						<div class="control">
							<button class="button is-link" type="submit">Valider</button>
						</div>
					</div>
				</div>
			</div>
			{{ form_end(form)}}

			<div class="message is-info">
				<div class="message-header">
					<p>Lien entre le Nom et les images</p>
				</div>
				<div class="message-body">
					<p>
						{index} représente un nombre (1, 2, 3...)
						<br>
						<table class="table">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Image n°{index}</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>Exemple</td>
									<td>exemple-{index}.jpg</td>
								</tr>
							</tbody>
						</table>
						Si ma sculpture est Bob la première image est bob-1.jpg
						<br><br>
						Vous pourrez ajouter d'autres images via la fonction modifier du tableau de bord
					</p>
				</div>
			</div>

		</div>

	</section>
{% endblock %}
