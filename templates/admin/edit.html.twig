{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
	{% include "shared/_navbar.html.twig" %}
	<section class="section has-text-light container" style="min-height:100vh">
		<h1 class="title has-text-light">Edite ton profil</h1>

		{{ form_start(form)}}
		<div class="has-text-danger">
			{{ form_errors(form) }}
		</div>
		<div class="columns">
			<div class="column">
				<div class="field">
					<div class="control">
						{{ form_row(form.prenom) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.nom) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.email) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.telephone) }}
					</div>
				</div>
			</div>
			<div class="column">
				<div class="field">
					<div class="control">
						{{ form_row(form.sousTitre) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.aPropos) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.avatar) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						{{ form_row(form.imageBg) }}
					</div>
				</div>
				<div class="field">
					<div class="control">
						<button class="button is-link" type="submit">Valider</button>
					</div>
				</div>
			</div>
		</div>
		{{ form_end(form)}}

	</section>
{% endblock %}
